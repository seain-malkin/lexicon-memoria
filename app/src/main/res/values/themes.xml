<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lexicon_memoria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:colorBackground">@color/grey</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="colorAccent">@color/purple_700</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/blue_700</item>
        <item name="colorControlHighlight">@color/blue_700</item>

        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>

        <!-- Surface -->
        <item name="colorSurface">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
</resources>