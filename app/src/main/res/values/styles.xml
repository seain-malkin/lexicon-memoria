<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Lexicon_memoria.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/actionMenuTextColor</item>
        <item name="android:actionMenuTextColor">?attr/actionMenuTextColor</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:colorControlActivated">?attr/colorControlActivated</item>
        <item name="android:colorControlHighlight">?attr/colorControlHighlight</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>

        <item name="iconTint">?attr/actionMenuTextColor</item>

    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="background">@color/white</item>
    </style>

    <style name="Headline.Light" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchFragment"></style>

    <style name="SearchFragment.ResultContainer">
        <item name="android:background">@color/blue_light</item>
        <item name="android:paddingTop">@dimen/gutterDouble</item>
        <item name="android:paddingBottom">@dimen/gutter</item>
    </style>
