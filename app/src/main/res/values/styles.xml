<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar -->
    <style name="Theme.Lexicon_memoria.Toolbar">

    </style>
    <!-- End Toolbar -->

    <!-- Text Appearance -->
    <style name="Text.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Text.Headline1.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Headline2" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Text.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="Text.Subtitle1.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="CardSectionTitleText" parent="CardTitleText">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- End Text Appearance -->

    <!-- Containers -->
    <style name="Container" parent="ThemeOverlay.MaterialComponents">
        <item name="android:padding">@dimen/gutter</item>
    </style>
    <style name="Container.Highlight" parent="Container">
        <item name="android:background">@color/blue_light</item>
        <item name="android:padding">@dimen/gutterDouble</item>
    </style>
    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_margin">@dimen/gutter</item>
    </style>
    <style name="CardContainer">
        <item name="android:layout_marginStart">@dimen/gutter</item>
        <item name="android:layout_marginEnd">@dimen/gutter</item>
        <item name="android:layout_marginBottom">@dimen/gutter</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <!-- End Containers -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>