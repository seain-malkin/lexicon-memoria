<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar -->
    <style name="Theme.Lexicon_memoria.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/actionMenuTextColor</item>
        <item name="android:actionMenuTextColor">?attr/actionMenuTextColor</item>
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:colorControlNormal">?attr/colorControlNormal</item>
        <item name="android:colorControlActivated">?attr/colorControlActivated</item>
        <item name="android:colorControlHighlight">?attr/colorControlHighlight</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="iconTint">?attr/actionMenuTextColor</item>
    </style>
    <!-- End Toolbar -->

    <!-- Text Appearance -->
    <style name="Text.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Text.Headline1.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Headline2" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Text.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="Text.Subtitle1.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- End Text Appearance -->

    <!-- Containers -->
    <style name="Container" parent="ThemeOverlay.MaterialComponents">
        <item name="android:padding">@dimen/gutter</item>
    </style>
    <style name="Container.Highlight" parent="Container">
        <item name="android:background">@color/blue_light</item>
        <item name="android:padding">@dimen/gutterDouble</item>
    </style>
    <style name="TextView" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_marginBottom">@dimen/gutter</item>
    </style>
    <!-- End Containers -->


</resources>